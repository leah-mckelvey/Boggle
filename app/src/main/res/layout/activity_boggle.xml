                android:id="@+id/box00"
                android:tag="00"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_weight=".25"/>
            <TextView
                android:id="@+id/box01"
                android:tag="01"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_weight=".25"/>
